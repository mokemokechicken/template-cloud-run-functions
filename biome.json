{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"json": {
		"formatter": {
			"enabled": true,
			"indentWidth": 2
		},
		"parser": {
			"allowComments": true,
			"allowTrailingCommas": false
		}
	},
	"files": {
		"include": ["**/*.json", "*.json"]
	},
	"linter": {
		"rules": {
			"style": {
				"useSingleVarDeclarator": "off",
				"noUselessElse": "off"
			},
			"suspicious": {
				"noImplicitAnyLet": "off",
				"noExplicitAny": "off"
			},
			"complexity": {
				"noForEach": "off"
			}
		}
	}
}
